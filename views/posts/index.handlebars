<div class="row mt-3">
  {{#each posts}}
  <div class="col-sm-6 col-lg-3 col-xs-6 col-12">
    <div class="card mb-3" style="height: auto">
      <a href="https://www.youtube.com/watch?v={{this.tittle}}">
        <img src="https://img.youtube.com/vi/{{this/tittle}}/mqdefault.jpg" class="card-img-top"
          alt="{{this.tittle}}" />
      </a>
      <div class="card-body d-flex flex-column bd-highlight">
        <h5 class="card-title">
          {{this.tittle}}
        </h5>
        <p class="card-text"
          style="text-overflow: ellipsis;white-space: wrap;word-wrap: break-word;overflow: hidden;max-height: 2.5em;line-height: 1.3em;">
          {{this.text}}
        </p>
        <a href="/edit/{{this._id}}" class="btn btn-primary">
          Edit
        </a>
        <form action="/delete/{{this._id}}?_method=DELETE" method="post" class="d-flex flex-column bd-highlight">
          <input type="hidden" name="_method" value="DELETE" />
          <button type="button" class="mt-2 btn btn-danger" data-bs-toggle="modal" data-bs-target="#exampleModal">
            Delete
          </button>
          <!-- Modal -->
          <div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel"
            aria-hidden="true">
            <div class="modal-dialog">
              <div class="modal-content">
                <div class="modal-header">
                  <h5 class="modal-title" id="exampleModalLabel">
                    Bạn có thật sự muốn xoá ITEM ?
                  </h5>
                  <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                  {{this.tittle}}
                </div>
                <div class="modal-footer">
                  <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
                    Đóng
                  </button>
                  <button type="submit" href="/delete/{{this._id}}?_method=DELETE" class="btn btn-danger">
                    Xoa
                  </button>
                </div>
              </div>
            </div>
          </div>
          <!-- Modal -->
        </form>
      </div>
    </div>
  </div>
  {{/each}}
</div>