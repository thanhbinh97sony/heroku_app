<div class="row mt-3">
{{#each posts}}
<div class="col-sm-6 col-lg-3 col-xs-6 col-12">
<div class="card mb-3" style="height: auto">
  <a href="https://www.youtube.com/watch?v={{this.tittle}}"><img src="https://img.youtube.com/vi/{{this/tittle}}/mqdefault.jpg
" class="card-img-top" alt="{{this.tittle}}"></a>
  <div class="card-body d-flex flex-column bd-highlight" >
    <h5 class="card-title">{{this.tittle}}</h5>
    <p class="card-text" style="text-overflow: ellipsis;white-space: wrap;word-wrap: break-word;overflow: hidden;max-height: 2.5em;line-height: 1.3em;">
        {{this.text}}
    </p>
    <a href="put/{{this._id}}" class="btn btn-primary">Edit</a>
    <form action="/delete/{{this._id}}?_method=DELETE" method="post" class="d-flex flex-column bd-highlight">
      <input type="hidden" name="_method" value="DELETE">
      <button type="submit" href="/delete/{{this._id}}?_method=DELETE" class="mt-2 btn btn-danger d-flex justify-content-center">Delete</button>
    </form>
  </div>
</div>
</div>
{{/each}}
</div>