<div class="container">
    <h3>Chinh sua bai viet</h3>
    <form action="/put/{{post._id}}?_method=PUT" method="POST">
        <input type="hidden" name="_method" value="PUT">
        <div class="form-group">
            <label for="tittle">Tieu de</label>
            <input type="text" class="form-control" name="tittle" required value="{{post.tittle}}">
        </div>
        <div class="form-group">
            <label for="text">Noi dung</label>
            <textarea class="form-control" name="text" required>{{post.text}}</textarea>
        </div>
        <button type="submit" class="mt-3 btn btn-primary">Update</button>
    </form>
</div>