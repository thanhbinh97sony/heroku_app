<div class="container">
    <h3>Tao bai viet</h3>
    <form action="/posts" method="post">
    <div class="form-group">
        <label for="tittle">Tieu de</label>
        <input type="text" class="form-control" name="tittle" required value="{{tittle}}">
    </div>
    <div class="form-group">
        <label for="text">Noi dung</label>
        <textarea class="form-control" name="text" required>{{text}}</textarea>
    </div>
    <button type="submit" class="mt-3 btn btn-primary">Success</button>
    </form>
</div>